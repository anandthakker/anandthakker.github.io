
extends layout

block append vars
  - bodyclass = 'experiment-detail'

block append head
  each style in page.metadata.styles
    link(rel='stylesheet', type='text/css', href=style)

block prepend title
  | #{ page.title + " - "}

block content
  article.experiment
    header
      h2= page.title
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.pagenav
    a(href=contents.index.url) Â« Home

block append scripts
  each script in page.metadata.scripts
    script(src=script)
