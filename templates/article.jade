
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block append head
  if page.metadata.styles
    each style in page.metadata.styles
      link(rel='stylesheet', type='text/css', href=style)

block content
  article.article
    header
      span.date
        != moment.utc(page.metadata.date).format('DD MMMM YYYY')
      h2= page.title
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.pagenav
    a(href=contents.index.url) Â« Full blog

block append scripts
  if page.metadata.scripts
    each script in page.metadata.scripts
      script(src=script)
